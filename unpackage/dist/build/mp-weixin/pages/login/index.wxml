<view class="page-warp" style="{{(theme)}}">
  <uni-nav-bar vue-id="6b4b36ba-1" backgroundColor="{{theme['--bg-color-global']}}" fixed="{{true}}" left-icon="close" border="{{false}}" bind:__l="__l"></uni-nav-bar>
  <view style="margin-top:80rpx;padding:0 75rpx;">
    <view style="width:600rpx;height:586rpx;">
      <image class="icon-app" src="../../static/pzy-images/AppIcon.png" lazy-load="{{true}}"></image>
      <view class="login-text fz-wb2 mt3">欢迎登录spark</view>
      <view class="fz1 mt1" style="color:rgba(0, 0, 0, 0.44);">Welcome to Spark plan</view>
      <view style="width:600rpx;margin-top:60rpx;background-color:#FFFFFF;">
        <u--input style="height:88rpx;" vue-id="6b4b36ba-2" placeholder="手机号" type="number" border="false" clearable="{{true}}" value="{{phlone}}" data-event-opts="{{[['^change',[['phloneChange']]],['^input',[['__set_model',['','phlone','$event',[]]]]]]}}" bind:change="__e" bind:input="__e" bind:__l="__l"></u--input>
      </view>
      <view style="width:600rpx;margin-top:20rpx;background-color:#FFFFFF;">
        <u--input style="height:88rpx;" vue-id="6b4b36ba-3" placeholder="登录密码" password="{{true}}" border="false" value="{{paswd}}" data-event-opts="{{[['^change',[['paswdChange']]],['^input',[['__set_model',['','paswd','$event',[]]]]]]}}" bind:change="__e" bind:input="__e" bind:__l="__l"></u--input>
      </view>
    </view>
    <view>
      <u-button style="background-color:#3A82FE;color:#FFFFFF;height:88rpx;" vue-id="6b4b36ba-4" type="primary" text="登录" data-event-opts="{{[['^click',[['homeNext']]]]}}" bind:click="__e" bind:__l="__l"></u-button>
    </view>
    <view data-event-opts="{{[['tap',[['forget_passwordNext',['$event']]]]]}}" style="color:#3A82FE;font-size:28rpx;margin-top:60rpx;" bindtap="__e">忘记密码</view>
  </view>
  <view class="fixed">
    <view data-event-opts="{{[['tap',[['registrationNext',['$event']]]]]}}" class="new-user-text" bindtap="__e">新用户注册</view>
  </view>
</view>